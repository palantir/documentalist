include mixins

- var toc = Object.keys(typescript).sort((a, b) => a.localeCompare(b))
- var interfacetoc = toc.filter(a => typescript[a].kind === "interface");
- var classtoc = toc.filter(a => typescript[a].kind === "class");

html
  head
    title Documentalist
    link(rel='stylesheet', href='assets/index.css')
  body
    #nav
      each item in nav
        h3: a(href="#" + item.reference)= item.title

      h3 Classes
      each name in classtoc
        - var name = typescript[name].name
        a.nav-item(href='#' + name): code= name

      h3 Interfaces
      each name in interfacetoc
        - var name = typescript[name].name
        a.nav-item(href='#' + name): code= name

      //- include current package.json version from text file (see npm script docs:version)
      h4:  include version.txt

      .copyright &copy; Copyright 2017-present Palantir

    #content

    each page in pages
      article(data-route=page.reference,hidden=true)
        +joinContent(page)

    each iface in typescript
      if iface.kind == "interface" || iface.kind == "class"
        section(data-route=iface.name,hidden=true)
          +interfaceDocs(iface)

    script(type='text/javascript', src='assets/index.js')
